#include<iostream>
#include<cmath>
using namespace std;
int main()
{
int physics;
int maths;
int chemistry;
int hindi;
int english;
cout<<"Enter marks obtained in physics"<<endl;
cin>>physics;
cout<<"Enter marks obtained in maths"<<endl;
cin>>maths;
cout<<"Enter marks obtained in chemistry"<<endl;
cin>>chemistry;
cout<<"Enter marks obtained in hindi"<<endl;
cin>>hindi;
cout<<"Enter marks obtained in english"<<endl;
cin>>english;
float avg =(physics+maths+chemistry+hindi+english)/5;
cout<<"Average marks obtained by Shushant"<<avg<<endl;

return 0;

}
